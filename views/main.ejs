<html>
  <head>
    <title>Cena</title>
    <link rel="stylesheet" href="/sass/index.css" />
  </head>
  <body ng-app="Cena" ng-init='username="<%= user.username %>"'>

    <!-- main navbar -->
    <nav class="navbar navbar-default" ng-controller="NavController">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/account/<%= user.username %>">
            <img src="/img/logo.png" />
          </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">

            <!-- <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
            <li><a href="#">Link</a></li> -->

            <!-- show grocery lists if we are on our page -->
            <li class="dropdown" ng-show="owner === username">
              <a href class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                Grocery Lists <span class="caret"></span>
              </a>

              <!-- display all grocery lists -->
              <ul class="dropdown-menu" role="menu" ng-controller="ListController">
                <li ng-repeat="list in getListsByTag(lists, 'grocery')">
                  <a href="/account#/lists/{{list.name}}">{{list.name}}</a>
                </li>
                <li class="divider"></li>
                <li>
                  <a href="#/addlist/grocery">
                    <span class="glyphicon glyphicon-plus"></span>
                    New Grocery List
                  </a>
                </li>
              </ul>
            </li>

            <!-- display all recipe lists if we are on our page -->
            <li class="dropdown" ng-show="owner === username">
              <a href class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                Recipes <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu" ng-controller="ListController">
                <li ng-repeat="list in getListsByTag(lists, 'recipe')">
                  <a href="/account#/lists/{{list.name}}">{{list.name}}</a>
                </li>
                <li class="divider"></li>
                <li>
                  <a href="#/addlist/recipe">
                    <span class="glyphicon glyphicon-plus"></span>
                    New Recipe
                  </a>
                </li>
              </ul>
            </li>

            <!-- display other lists if we are on our page -->
            <li class="dropdown" ng-show="owner === username">
              <a href class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                Others <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu" ng-controller="ListController">
                <li ng-repeat="list in getListsByTag(lists, null)">
                  <a href="/account#/lists/{{list.name}}">{{list.name}}</a>
                </li>
              </ul>
            </li>

            <!-- if not on our page, show a link to get back -->
            <li ng-hide="owner === username">
              <a href="/account">Lists</a>
            </li>

            <!-- foodstuffs -->
            <li>
              <a href="/account/#/foodstuffs">Foodstuffs</a>
            </li>

            <!-- settings page -->
            <li>
              <a href="/account/#/settings">Settings</a>
            </li>

            <!-- readme -->
            <li>
              <a href="/account/#/readme">Readme</a>
            </li>

          </ul>

          <!-- login link -->
          <ul class="nav navbar-nav pull-right">
            <li>
              <% if (typeof user === 'object' && user) { %>
                <a href="/logout">
                  Logout
                  <%= user.username %>
                </a>
              <% } else { %>
                <a href="/login">Login</a>
              <% } %>
            </li>
          </ul>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <!-- display a list -->
    <div class="container">
      <div ng-view>
    </div>

    <!-- javascript -->
    <script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/angular/angular.min.js"></script>
    <script src="/bower_components/angular-route/angular-route.min.js"></script>
    <script src="/bower_components/underscore/underscore-min.js"></script>
    <script src="/js/ui-bootstrap.min.js"></script>
    <script type="text/javascript" src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/bower_components/marked/marked.min.js"></script>
    <script src="/bower_components/angular-marked/angular-marked.min.js"></script>

    <script src="/js/app.js"></script>
    <script src="/js/router.js"></script>
    <script src="/js/reverse_filter.js"></script>

    <script src="/js/controllers/list.js"></script>
    <script src="/js/controllers/foodstuff.js"></script>
    <script src="/js/controllers/nav.js"></script>
    <script src="/js/controllers/settings.js"></script>
    <script src="/js/controllers/shops.js"></script>

    <script src="/js/services/list.js"></script>
    <script src="/js/services/foodstuff.js"></script>
    <script src="/js/services/prefs.js"></script>
    <script src="/js/services/shop.js"></script>
  </body>
</html>
